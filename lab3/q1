#include <iostream>
using namespace std;

class Stack
{
    int arr[50];
    int t;
    public:
        Stack() 
        { t = -1; }
        void push(int x);
        void pop();
        void isEmpty();
        void isFull();
        void display();
        void peek();
        void reverseString(string a);
};

void Stack::push(int x)
{
    if (t >= 49)
        cout << "Stack Overflow\n";
    else
        arr[++t] = x;
}

void Stack::pop()
{
    t < 0 ?   cout << "Stack Underflow\n" : cout << "Popped: " << arr[t--] << endl;
}
void Stack::isEmpty()
{
    t < 0 ?   cout << "Stack is empty\n"  : cout << "Stack is not empty\n";
}
void Stack::isFull()
{
    t >= 49 ? cout << "Stack is full\n"   : cout << "Stack is not full\n";
}
void Stack::peek()
{
    t < 0 ?   cout << "Stack is empty\n"  : cout << "t element: " << arr[t] << endl;
}

void Stack::display()
{
    if (t < 0)
        cout << "Stack is empty\n";
    else
    {
        cout << "Stack elements: ";
        for (int i = 0; i <= t; i++)
            cout << arr[i] << " ";
        cout << endl;
    }
    
}



int main()
{
    Stack s;
    string str;
    int choice = 0, value;
    do {
        cout << "\nMenu:\n" << "1. Push\n" << "2. Pop\n" << "3. isEmpty\n" << "4. isFull\n" << "5. Display\n" << "6. Peek\n" << "7. Reverse String\n" << "8. Exit\n" << "Enter your choice: ";
        cin >> choice;
        switch (choice)
        {
            case 1: cout << "Enter value to push: ";    cin >> value;   s.push(value);   break;
            case 2:     s.pop();        break;
            case 3:     s.isEmpty();    break;
            case 4:     s.isFull();     break;
            case 5:     s.display();    break;
            case 6:     s.peek();       break;
            case 7: cout << "Enter string to reverse: ";    cin >> str; s.reverseString(str);    break;
            case 8:     cout << "Exiting...\n"; break;
            default:    cout << "Invalid choice!\n";
        }
    } while (choice != 8);
    return 0;
}
