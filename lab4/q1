#include<iostream>
using namespace std;

class Queue
{
    int arr[100], front, rear, size;
    public:
        Queue(int size);
        void enqueue(int x);
        void dequeue();
        bool isEmpty();
        bool isFull();
        void display();
        void peek();
};

Queue::Queue(int size)
{
    size = size;
    front = rear = -1;
}

void Queue::enqueue(int x)
{
    if (isFull())
    {
        cout << " full\n";
        return;
    }
    if (front == -1)
        front = 0;
    arr[++rear] = x;
    cout << "Enqueued: " << x << endl;
}

void Queue::dequeue()
{
    if (isEmpty())
    {
        cout << " empty\n";
        return;
    }
    cout << "Dequeued: " << arr[front] << endl;
    
}

bool Queue::isEmpty()
{
    return front == -1;
}

bool Queue::isFull()
{
    return rear == size - 1;
}

void Queue::display()
{
    if (isEmpty())
    {
        cout << "empty\n";
        return;
    }
    for (int i = front; i <= rear; i++)
        cout << arr[i] << " ";
    cout << endl;
}

void Queue::peek()
{
    isEmpty() ? cout << "empty\n" : cout << "Front: " << arr[front] << endl;
}

int main()
{
    int size, choice, val;
    cout << "Enter queue size: ";
    cin >> size;
    Queue q(size);
    do {
        cout << "\t1.Enqueue \n\t2.Dequeue \n\t3.isEmpty \n\t4.isFull \n\t5.Display \n\t6.Peek \n\t7.Exit\n" << "Enter choice: ";
        cin >> choice;
        switch (choice)
        {
            case 1: cout << "Enter value: ";    cin >> val;     q.enqueue(val);
            break;
            case 2: q.dequeue();  
            break;
            case 3: cout << (q.isEmpty() ? " empty\n" : " not empty\n");   
            break;
            case 4: cout << (q.isFull()  ? "full\n"  : " not full\n" );    
            break;
            case 5: q.display();    
            break;
            case 6: q.peek();       
            break;
            case 7: 
            break;
            default : cout << "Invalid Choice";  
        }
    }
    
    while (choice != 7);
}
